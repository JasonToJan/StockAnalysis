<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvvm.ui.MainActivity"
        android:background="@color/test_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80">


                    <TextView
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="wrap_content"
                        android:text="代号:"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/sp_10"
                        />

                    <EditText
                        android:id="@+id/ft_code_et"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_30"
                        android:hint="必填"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:gravity="center"
                        android:digits="1234567890"
                        android:layout_marginStart="@dimen/sp_10"
                        android:background="@drawable/edit_selector"
                        />

                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80">

                    <TextView
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="wrap_content"
                        android:text="开始日期:"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/sp_10"
                        />

                    <TextView
                        android:id="@+id/ft_date_begin_tv"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_30"
                        android:hint="必填"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/sp_10"
                        android:background="@drawable/edit_selector"
                        />

                    <TextView
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="wrap_content"
                        android:text="结束日期:"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/sp_10"
                        />

                    <TextView
                        android:id="@+id/ft_date_end_tv"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_30"
                        android:hint="必填"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/sp_10"
                        android:background="@drawable/edit_selector"
                        />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/ft_test_btn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="点击请求API"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/ft_txt"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                tools:text="这是测试文本"
                android:layout_gravity="center"
                android:padding="16dp"
                />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</layout>